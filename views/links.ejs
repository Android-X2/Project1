<%- include('partials/header') -%>

<h3>Testing adding link to group shit</h3>
<ul>
    <li><a href="/dashboard">Dashboard</a></li>
    <li><a href="/auth/logout">Logout</a></li>
</ul>
<h3>Current Links</h3>
<% for(let j=0;j<links.length;j++){ %>
                        
    <% if(group._id.toString() == links[j].group.toString()) { %>
   <span>
    <a href="<%= links[j].link %>" target="_blank"><%= links[j].title %></a>

    <form
    action="/main/deleteLink/<%= links[j]._id%>?_method=DELETE"
    method="POST"
    class="col-3"
    >
    <button class="btn btn-primary fa fa-trash" type="submit"></button>
</form>
   </span>
    
    <% } %>

<% } %>
<h3>Add a link in <%=group.title %> here</h3>
<div class="row">
    <form action="/main/createLink/<%= group._id %>" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <label for="title">Title</label>
                <input type="text" name="title" id="title">
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <label for="link">Link</label>
                <input type="text" name="link" id="link">
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>

<%- include('partials/footer') -%>