<%- include('partials/header') -%>
<div class = 'top-container'>
    <div class="inside-top">
        <h3><i class="fas fa-soli fa-tree"></i>Yggdrasil</h3>
        <h3><%= user.displayName %></h3>      
    </div>
</div>
<div >
    <ul class="group-container">
        <% for(let i = 0; i<6; i++){ %>  
            <li >
                <div class="list-container2" >
                    <div class="title-container">
                        <h6><%= groups[i]?.title %></h6>
                    </div>
                    <div class="divider"></div>
                    <% let links1 = links.filter(x=>x.group.toString() == groups[i]._id.toString()) %>
                        <ul>
                            <% for(let j=0; j<4; j++){ %>
                                <% if(links1[j]) { %> 
                                <div class="link-container" >
                                        <li>
                                            <a href="<%= links1[j].link %>" target="_blank" class="bg-primary btn btn-primary btn-block btn-rounded"><%= links1[j].title %></a>
                                        </li>  
                                </div>  
                                <% } %>
                            <% } %>
                            <% if(links1.length>=5){ %> 
                                <div class="all-container">
                                    <a href="/profile/allLinks/<%= groups[i]._id %>">All <%= links1.length %> Links...</a>
                                </div>
                            <%}%>
                        </ul> 
                </div>
            </li>
        <% } %>
    </ul>
</div>

<% if(groups.length > 6) { %>
    <div class="nextPage-container">
        <h6>All Groups</h6>
        <a href="/allGroups/<%=user._id%>" >
            <i class="large material-icons">arrow_forward</i>
        </a>
    </div>
<% } %>






<%- include('partials/footer') -%>